<jsp:root version="2.0" xmlns="http://www.w3.org/1999/xhtml"        xmlns:jsp="http://java.sun.com/JSP/Page"        xmlns:c="http://java.sun.com/jsp/jstl/core"        xmlns:s="http://www.springframework.org/tags"        xmlns:sf="http://www.springframework.org/tags/form">    <s:url value="/announcement/add" var="form_url"/>    <s:url value="/subject/new" var="subj_new"/>    <div class="container">        <h3>Add New Announcement</h3>        <c:choose>            <c:when test="${empty subjectList}">                No subject found. <a href="${subj_new}">Add some subject first</a>.            </c:when>            <c:otherwise>                <sf:form method="POST" action="${form_url}" modelAttribute="announcement">                    <table>                        <tr>                            <td><sf:label path="title">Title</sf:label></td>                            <td><sf:input path="title" size="60"/><sf:errors path="title" cssclass="error"/></td>                        </tr>                        <tr>                            <td><sf:label path="message">Message</sf:label></td>                            <td><sf:textarea path="message" rows="10" cols="60"/><sf:errors path="message" cssclass="error"/></td>                        </tr>                        <tr>                            <td><sf:label path="subject">Subject</sf:label></td>                            <td><sf:select path="subject" items="${subjectList}" itemValue="code" itemLabel="code"/>                                <sf:errors path="subject" cssclass="error"/></td>                        </tr>                        <tr>                            <td colspan="2"><input type="submit" value="Submit"/></td>                        </tr>                    </table>                </sf:form>            </c:otherwise>        </c:choose>    </div> <!-- /container --></jsp:root>